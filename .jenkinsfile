pipeline {
    agent any
    tools {
        nodejs 'NodeJS 20.0.0'
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'npm install'
                sh 'npm run build'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
    
    post {
        always {
            archiveArtifacts artifacts: './next/**/*', fingerprint: true
        }
    }
}
