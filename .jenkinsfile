pipeline {
    agent {
        docker { 
            image 'node:19-alpine'
            args '--privileged'
        }
    }
    tools {
        nodejs 'NodeJS 20.0.0'
    }

    stages {
        stage('Initialize'){
            steps {
                def dockerHome = tool 'docker'
                env.PATH = "${docker}/bin:${env.PATH}"
            }
        }
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'npm install'
                sh 'npm run build'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
        stage('Deliver') {
            steps {
                archiveArtifacts artifacts: '.next/**/*', fingerprint: true
            }
        }
    }
}
